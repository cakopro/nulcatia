<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/register.css">
    <title>Register</title>
</head>

<body>
    <%- include('partials/header') %>
        <main>
            <div class="centrar">
                <div class="container-central">
                    <h1>Registro</h1>
                    <form action="/register" method="post" class="formulario-register">
                        <div class="input-group">
                            <label for="nombre_usuario">Nombre:</label>

                            <input type="text" id="nombre_usuario" name="nombre_usuario"
                                value="<%= datos?.nombre_usuario || '' %>">
                            <% if (errores?.nombre_usuario){ %>
                                <p class="error">
                                    <%=errores.nombre_usuario %>
                                </p>
                                <% } %>
                        </div>

                        <div class="input-group">
                            <label for="contraseña">Contraseña:</label>
                            <input type="password" id="contraseña" name="contraseña"
                                value="<%= datos?.contraseña || '' %>">

                        </div>
                        <div class="input-group">
                            <label for="correo">Email:</label>
                            <input type="email" id="correo" name="correo" value="<%= datos?.correo || '' %>">
                            <% if (errores?.correo){ %>
                                <p class="error">
                                    <%=errores.correo%>
                                </p>
                                <% } %>
                        </div>
                        <button type="submit" class="boton-guardar"> <span
                                class="material-icons">save</span>Registrar</button>
                        <a href="/login" class="a-style">¿Ya tienes cuenta?</a>
                    </form>
                </div>
            </div>
        </main>
        <%- include('partials/footer') %>
            <script>
                const formulario = document.querySelector('.formulario-register');
                const guardarBtn = formulario.querySelector('.boton-guardar');
                const campos = formulario.querySelectorAll('input');

                function verificarCamposLlenos() {
                    let todosLlenos = true;
                    campos.forEach(campo => {
                        if (!campo.value.trim()) {
                            todosLlenos = false;
                        }
                    });
                    guardarBtn.disabled = !todosLlenos;
                }

                campos.forEach(campo => {
                    campo.addEventListener('input', verificarCamposLlenos);
                    campo.addEventListener('change', verificarCamposLlenos);
                });

                window.addEventListener('DOMContentLoaded', verificarCamposLlenos);
            </script>

</body>

</html>