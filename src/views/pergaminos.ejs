<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/pergaminos.css" />
  <link rel="stylesheet" href="/css/gatitos.css">
  <title>Pergaminos</title>
</head>

<body>
  <%- include('partials/header') %>

  <main>
    <table class="tabla" id="tablaPergaminos">
      <thead>
        <tr>
          <% if (usuario && usuario.rol === 'admin') { %>
            <th colspan="5">Pergaminos</th>
          <% } else { %>
            <th colspan="3">Pergaminos</th>
          <% } %>
        </tr>
        <tr>
          <th>Clan</th>
          <th>TÃ­tulo</th>
          <th>Texto</th>
          <% if (usuario && usuario.rol === 'admin') { %>
            <th colspan="2">Acciones</th>
          <% } %>
        </tr>
      </thead>
      <tbody>
        <% pergaminos.forEach(function(pergamino) { %>
          <tr>
            <td><%= pergamino.clan %></td>
            <td><%= pergamino.titulo %></td>
            <td><%= pergamino.texto %></td>

            <% if (usuario && usuario.rol === 'admin') { %>
              <td class="acciones">
                <form action="/pergaminos/<%= pergamino.id_pergamino %>/eliminar" method="POST" class="form-inline">
                  <button type="submit">Eliminar</button>
                </form>
              </td>
              <td class="acciones">
                <form action="/pergaminos/<%= pergamino.id_pergamino %>/editar" method="GET" class="form-inline">
                  <button type="submit">Actualizar</button>
                </form>
              </td>
            <% } %>
          </tr>
        <% }); %>
      </tbody>
    </table>

    <% if (usuario && usuario.rol === 'admin') { %>
      <div class="boton-centro">
        <form action="/pergaminos/nuevo" method="GET">
          <button type="submit">Agregar Clan</button>
        </form>
      </div>
    <% } %>
  </main>

  <%- include('partials/footer') %>
</body>

</html>
