<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/editar.css">
  <title>Editar Territorio</title>
</head>

<body>
  <%- include('partials/header') %>

  <main>
    <div class="centrar">
      <div class="container-central">
        <div class="container-foto">
          <h1>Editar Territorio: <%= territorio.nombre %></h1>
        </div>

        <section class="section-form">
          <h2>Formulario de edición</h2>
            <form action="/territorios/<%= territorio.id_territorio %>?_method=PUT" method="POST"  class="formulario-editar">

            <label for="nombre">Nombre del Territorio:</label>
            <input type="text" id="nombre" name="nombre" value="<%= territorio.nombre %>" placeholder="Nombre del territorio">

            <label for="kilometros">Kilómetros:</label>
            <input type="number" id="kilometros" name="kilometros" value="<%= territorio.kilometros %>" placeholder="Cantidad en km">

            <div class="botones-formulario">
              <button type="submit" class="boton-guardar">
                <span class="material-icons">save</span>Guardar
              </button>
              <a href="/territorios" class="boton-cancelar">
                <span class="material-icons">close</span>Cancelar
              </a>
            </div>
          </form>
        </section>
      </div>
    </div>
  </main>

  <script>
    const formulario = document.querySelector('.formulario-editar');
    const guardarBtn = formulario.querySelector('.boton-guardar');
    const campos = formulario.querySelectorAll('input');

    function verificarCamposLlenos() {
      let todosLlenos = true;
      campos.forEach(campo => {
        if (!campo.value.trim()) {
          todosLlenos = false;
        }
      });
      guardarBtn.disabled = !todosLlenos;
    }

    campos.forEach(campo => {
      campo.addEventListener('input', verificarCamposLlenos);
      campo.addEventListener('change', verificarCamposLlenos);
    });

    window.addEventListener('DOMContentLoaded', verificarCamposLlenos);
  </script>

  <%- include('partials/footer') %>
</body>

</html>
