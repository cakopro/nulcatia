<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
         <link rel="stylesheet" href="/css/agregarterritorio.css" />
        <title>Nuevo Territorio</title>
     </head>

<body>
  <%- include('partials/header') %>

  <main>
    <div class="centrar">
      <div class="container-central">
        <h1>Crear Territorio</h1>

        <form action="/territorios" method="post" class="formulario-register">
          <div class="input-group">
            <label for="nombre">Nombre del Territorio:</label>
            <input type="text" id="nombre" name="nombre" value="<%= datos?.nombre || '' %>" required />
          </div>

          <div class="input-group">
            <label for="kilometros">Kilómetros:</label>
            <input type="number" id="kilometros" name="kilometros" value="<%= datos?.kilometros || '' %>" required />
          </div>

          <div class="botones">
            <button type="submit" class="boton-guardar">✨ Crear ✨</button>
            <a href="/territorios" class="boton-cancelar">Cancelar</a>
          </div>
        </form>
      </div>
    </div>
  </main>

  <%- include('partials/footer') %>

  <script>
    const formulario = document.querySelector('.formulario-register');
    const guardarBtn = formulario.querySelector('.boton-guardar');
    const campos = formulario.querySelectorAll('input');

    function verificarCamposLlenos() {
      let todosLlenos = true;
      campos.forEach(campo => {
        if (!campo.value.trim()) {
          todosLlenos = false;
        }
      });
      guardarBtn.disabled = !todosLlenos;
    }

    campos.forEach(campo => {
      campo.addEventListener('input', verificarCamposLlenos);
      campo.addEventListener('change', verificarCamposLlenos);
    });

    window.addEventListener('DOMContentLoaded', verificarCamposLlenos);
  </script>
</body>

</html>